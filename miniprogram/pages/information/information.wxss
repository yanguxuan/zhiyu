/* pages/information/information.wxss */
.container {
  padding: 30rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.user-info {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 40rpx 0 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #4a90e2;
  line-height: 1.4;
}

/* 基本信息表格样式 */
.table-container {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.table-header {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.table-row {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.th, .td {
  font-size: 28rpx;
  padding: 16rpx;
}

.th {
  color: #666;
  font-weight: bold;
}

/* 详细信息样式 */
.detail-table-container {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.detail-row {
  margin-bottom: 24rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: bold;
}

/* 输入框样式优化 */
.td-input, .detail-input {
  width: 100%;
  height: 70rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #fff;
  box-sizing: border-box;
}

.detail-textarea {
  width: 100%;
  height: 160rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fff;
  box-sizing: border-box;
}

.td-input:focus, .detail-input:focus, .detail-textarea:focus {
  border-color: #4a90e2;
  background: #fff;
}

/* 按钮样式优化 */
.action-area {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.summary-btn, .family-btn, .save-btn {
  width: 90%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.summary-btn {
  background: #4a90e2;
  color: #fff;
}

.family-btn {
  background: #5cb85c;
  color: #fff;
}

.save-btn {
  background: #ff9800;
  color: #fff;
}

.btn-desc {
  font-size: 26rpx;
  color: #999;
  margin-top: 20rpx;
  text-align: center;
}

.detail-section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #eee;
}

.detail-picker {
  width: 100%;
  height: 70rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-text:empty::before {
  content: attr(placeholder);
  color: #999;
}

