/* 优化总结报告显示样式 */
.summary-content {
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.summary-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-all;
  display: block;
  width: 100%;
}

.no-user-summary {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.no-user-summary text {
  color: #999;
  font-size: 28rpx;
}

.summary-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  text-align: right;
}

/* 修改按钮布局样式 */
.action-area {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  z-index: 100;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.main-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #4a90e2;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.main-btn-icon {
  font-size: 50rpx;
  font-weight: bold;
}

.btn-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
  opacity: 0;
  transform: translateY(20rpx);
  pointer-events: none;
}

.btn-group.show {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.action-btn {
  width: 180rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: normal;
  padding: 0;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn-text {
  color: #fff;
  font-size: 28rpx;
}

.save-btn {
  background: #ff9800;
}

.family-btn {
  background: #5cb85c;
}

.summary-btn {
  background: #4a90e2;
}

/* 为底部按钮留出空间 */
.container {
  padding-bottom: 140rpx;
}

/* 修改总结报告相关样式，确保正确显示 */
.user-summary-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.user-summary-section {
  margin-bottom: 30rpx;
}

.user-summary-subtitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #eee;
}

.user-summary-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.summary-table-container {
  border: 2rpx solid #eee;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  width: 100%;
}

.summary-table-header {
  display: flex;
  background-color: #f5f5f5;
  font-weight: bold;
}

.summary-table-row {
  display: flex;
  border-top: 2rpx solid #eee;
}

.summary-table-cell {
  flex: 1;
  padding: 20rpx;
  word-break: break-all;
  font-size: 28rpx;
  white-space: pre-wrap;
}

.no-user-summary {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.no-user-summary text {
  color: #999;
  margin-bottom: 30rpx;
  font-size: 28rpx;
}

.generate-summary-btn {
  background-color: #4a90e2;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
}