.container {
  padding: 20rpx;
  background: #f6f6f6;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.history-list {
  padding: 0 10rpx;
}

.history-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-content {
  flex: 1;
  margin-right: 20rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

/* 修改时间显示样式，确保完整显示 */
.item-date, .item-update-time {
  font-size: 22rpx;
  color: #999;
  overflow: visible;
  word-break: break-all;
  max-width: 60%;
  text-align: right;
}

.item-header, .item-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
}

.item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  max-width: 40%;
}

.item-stage {
  font-size: 24rpx;
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  max-width: 40%;
}

/* 确保预览文本不会挤压时间显示 */
.item-preview {
  margin: 10rpx 0;
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
}

/* 确保舞台信息不会挤压更新时间 */
.item-stage {
  font-size: 24rpx;
  color: #007aff;
  background-color: rgba(0, 122, 255, 0.1);
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
  max-width: 150rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-preview {
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.delete-btn {
  padding: 10rpx;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.batch-delete {
  padding: 10rpx;
}

.batch-delete .icon-icon-test4 {
  font-size: 45rpx;
  color: #333;
  transition: all 0.2s ease;
}

.batch-delete:active .icon-icon-test4 {
  opacity: 0.8;
  transform: scale(0.9);
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox.checked {
  background-color: #007AFF;
  border-color: #007AFF;
}

.checkbox.checked::after {
  content: '';
  width: 20rpx;
  height: 20rpx;
  background-color: white;
  border-radius: 50%;
}

.batch-delete-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.select-all {
  display: flex;
  align-items: center;
}

.select-all text {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

.delete-selected {
  background-color: #ff4444;
  color: white;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.delete-selected:active {
  opacity: 0.8;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: white;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

/* 选择框样式 */
.select-checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #cccccc;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.select-checkbox.selected {
  background-color: #07c160;
  border-color: #07c160;
}

.batch-delete-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.select-all {
  display: flex;
  align-items: center;
}

.select-all .select-checkbox {
  margin-right: 10rpx;
}

.select-all text {
  font-size: 28rpx;
  color: #333;
}

/* 删除多余的样式 */
/* 删除 .checkbox, .checkbox.checked, .select-all-btn 等多余样式 */
.select-all-btn {
  display: flex;
  align-items: center;
  padding: 8px 12px;
  border-radius: 4px;
  background-color: #f5f5f5;
}

.select-all-btn.selected {
  background-color: #e6f7ff;
}

.select-all-btn text {
  margin-left: 4px;
  font-size: 14px;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
  font-size: 24rpx;
}

.item-update-time {
  color: #999;
}

.item-stage {
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
}