/* pages/summary/summary.wxss */
.container {
  padding: 30rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  flex: 1;
}

.progress-container {
  width: 100%;
  margin-bottom: 30rpx;
}

.progress-bar {
  height: 20rpx;
  background-color: #e0e0e0;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-inner {
  height: 100%;
  background-color: #4a90e2;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  flex: 1;
}

.error-text {
  margin: 30rpx 0;
  font-size: 28rpx;
  color: #e64340;
  text-align: center;
}

.retry-btn {
  background-color: #4a90e2;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  border-radius: 30rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  flex: 1;
}

.empty-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #999;
}

/* 总结表格 */
.summary-container {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.table-header {
  display: flex;
  background-color: #f0f8ff;
  border-bottom: 2rpx solid #e0e0e0;
}

.th {
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.explicit {
  flex: 1;
  border-right: 2rpx solid #e0e0e0;
}

.implicit {
  flex: 1;
}

.table-body {
  flex: 1;
  max-height: calc(100vh - 300rpx);
}

.table-row {
  display: flex;
  border-bottom: 2rpx solid #f0f0f0;
}

.table-row:last-child {
  border-bottom: none;
}

.td {
  padding: 20rpx;
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
}

.summary-footer {
  padding: 20rpx;
  display: flex;
  justify-content: center;
  border-top: 2rpx solid #f0f0f0;
}

.back-btn {
  background-color: #4a90e2;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  border-radius: 30rpx;
  width: 200rpx;
}