/**app.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

/* 全局按钮样式 */
button {
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 44rpx;
}

button::after {
  border: none;
}

button[disabled] {
  background: #ccc !important;
  color: #fff !important;
}

/* 全局输入框样式 */
input {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
}

/* 全局加载样式 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

/* 全局错误提示样式 */
.error-tip {
  color: #ff4d4f;
  font-size: 24rpx;
  text-align: center;
  margin: 20rpx 0;
}

/* 全局空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  color: #999;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
} 
